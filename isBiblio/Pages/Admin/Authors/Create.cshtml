@page
@model iSBiblio.Pages.Admin.Authors.CreateModel

@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Ajout d'un auteur";
}

<h1 class="title w-100">Ajout d'auteur</h1>


<hr />
<div class="row">
    <div class="col-md-4 text-white-50">

        <form class="adminForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-white">
                <label asp-for="Auteur.Nom" class="control-label"></label>
                <input asp-for="Auteur.Nom" class="form-control" />
                <span asp-validation-for="Auteur.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auteur.Prenom" class="control-label">Prénom</label>
                <input asp-for="Auteur.Prenom" class=" form-control" />
                <span asp-validation-for="Auteur.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auteur.DateNaissance" class="control-label">Date de Naissance</label>
                <input asp-for="Auteur.DateNaissance" class="form-control" />
                <span asp-validation-for="Auteur.DateNaissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Valider" class="valider text-white btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="Retour">
    <a class=" btn btn-danger text-white" asp-page="Index">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
