@page
@model iSBiblio.Pages.Admin.ConnexionAdminModel
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Connexion";
}


<div class="R-container" id="R-container">
            
    <div class="form-contain login-contain">
        <form method="post">
            <h1>Connexion</h1>
            @if (Model.error)
            {
                <div class="alert alert-danger text-center mt-2 mb-0" role="alert">
                    Compte invalide !
                </div>
            }
            <input type="email" placeholder="Email" name="email" required>
            <input type="password" placeholder="Mot de passe" name="password" required>
            <button class="button" type="submit">Se connecter</button>
        </form>
    </div>
    <div class="R-overlay-contain">
        <img id="form-img" src="~/img/Well.png" alt="IMG">
        <p>Connectez-vous pour gérer iS Biblio</p>
    </div>
</div>
   